<!-- Template for SearchWidget. Author: hearnden@google.com (David Hearnden) -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">


  <ui:style>

      .disclosureSearchFilterPanel {

        width: 100%;
    }

    .disclosureSearchFilterPanel-open {

        width: 100%;
    }

    .disclosureSearchFilterPanel-closed {

        width: 100%;
    }

    .disclosureSearchFilterPanel .header {
        padding: 0px 12px;
        color: gray;
        text-decoration: none;
        margin: 0px 0px auto;
    }



    .hideit {

    display: none;

    }

  </ui:style>


  <ui:with
    field="css" type="org.waveprotocol.box.webclient.search.SearchWidget.Css" />
  <ui:with
    field="msg" type="org.waveprotocol.box.webclient.search.i18n.SearchWidgetMessages" />


   <g:DisclosurePanel styleName='{style.disclosureSearchFilterPanel}' ui:field='disclosurePanel'>
    <g:header><ui:text from="{msg.searchOptions}"/></g:header>
    <g:VerticalPanel styleName='{css.self}'>

     <g:TextBox  styleName='{css.searchTextBox} {style.hideit}' ui:field='query'  />

     <g:Label styleName='{css.searchLabel}'><ui:text from="{msg.createdBy}"/></g:Label>
     <g:TextBox styleName='{css.searchTextBox} {css.searchContentRow}' ui:field='creators' />

     <g:Label styleName='{css.searchLabel}'><ui:text from="{msg.withParticipants}"/></g:Label>
     <g:TextBox styleName='{css.searchTextBox} {css.searchContentRow}' ui:field='participants'/>

     <g:Label styleName='{css.searchLabel}'><ui:text from="{msg.scope}"/></g:Label>
     <g:ListBox styleName='{css.searchContentRow}' ui:field='scope'>
         <g:item value='inbox'><ui:text from="{msg.inbox}"/></g:item>
         <g:item value='shared'><ui:text from="{msg.shared}"/></g:item>
         <g:item value='all'><ui:text from="{msg.all}"/></g:item>
     </g:ListBox>

     <g:Label styleName='{css.searchLabel}'><ui:text from="{msg.creationDateRange}"/></g:Label>
       <g:HorizontalPanel verticalAlignment='middle' styleName='{css.searchContentRow}'>
        <dp:DateBox styleName='{css.searchDateBox} {css.searchInline}' ui:field='createFromDate' />
        <g:Label styleName='{css.searchInline}'>&rsaquo;</g:Label>
        <dp:DateBox styleName='{css.searchDateBox}' ui:field='createToDate' />
       </g:HorizontalPanel>

      <g:Label styleName='{css.searchLabel}'><ui:text from="{msg.lastmodDateRange}"/></g:Label>
      <g:HorizontalPanel verticalAlignment='middle' styleName='{css.searchContentRow}'>
        <dp:DateBox styleName='{css.searchDateBox}  {css.searchInline}' ui:field='lastmodFromDate' />
        <g:Label styleName='{css.searchInline}'>&rsaquo;</g:Label>
        <dp:DateBox styleName='{css.searchDateBox}'  ui:field='lastmodToDate' />
       </g:HorizontalPanel>


    <g:HorizontalPanel styleName='{css.searchButtonRow}' >
        <g:Button styleName='{css.searchButton}' ui:field='search'><ui:text from="{msg.search}"/></g:Button>
        <g:Button styleName='{css.searchButton}' ui:field='reset'><ui:text from="{msg.reset}"/></g:Button>
    </g:HorizontalPanel>
    </g:VerticalPanel>
   </g:DisclosurePanel>

</ui:UiBinder>
